<div class="container">
    <h2>產品列表</h2>
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">名稱</th>
                    <th scope="col">價格</th>
                </tr>
                </thead>
                <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>
</div>


